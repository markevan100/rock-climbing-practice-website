<% if @practice.errors.any? %>
  <h2> The following errors prevented practice from saving. </h2>
  <ul>
  <% @practice.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @practice do |f| %>
<p>
  <%= f.label :date %></br>
  <%= f.text_field :date %>
</p>
<p>
  <%= f.label :author %></br>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :plan %></br>
  <%= f.text_area :plan %>
</p>
<p>
  <%= f.label :approval_1 %></br>
  <%= f.text_field :approval_1 %>
</p>
<p>
  <%= f.label :approval_2 %></br>
  <%= f.text_field :approval_2 %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
