<% if @contact.errors.any? %>
  <h2> The following errors prevented contact from saving. </h2>
  <ul>
  <% @contact.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @contact do |f| %>
<p>
  <%= f.label :title %></br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :name %></br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :email %></br>
  <%= f.text_area :email %>
</p>
<p>
  <%= f.label :cell %></br>
  <%= f.text_field :cell %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
